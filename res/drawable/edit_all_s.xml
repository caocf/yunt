<?xml version="1.0" encoding="utf-8"?>
<shape xmlns:android="http://schemas.android.com/apk/res/android" >
    <!-- 边缘线的宽度和颜色 -->
    <stroke android:width="1px" android:color="#C9C9C8" />
    <!-- 中间渐变，角度0从左往右，正值为逆时针，270度为从上到下 -->
    <gradient  android:startColor="#ffffff" android:centerColor="#ffffff" android:endColor="#ffffff" android:angle="270"/>
    <!-- 设置四个角的角度 -->
   <corners android:topLeftRadius="7dp" android:topRightRadius="7dp" 
       android:bottomLeftRadius="7dp" android:bottomRightRadius="7dp"/>
   <!-- 设置padding -->
   <padding android:left="10dp" android:top="0dp" android:right="10dp" android:bottom="0dp"/>
</shape>